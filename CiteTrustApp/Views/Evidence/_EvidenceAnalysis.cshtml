@model CiteTrustApp.Models.EvidenceAnalysisViewModel
@using System.Web

<div class="evidence-analysis">
    <h5 class="mb-2">@Html.Raw(HttpUtility.HtmlDecode(Model.Title ?? "Phân tích"))</h5>

    @if (!string.IsNullOrWhiteSpace(Model.Excerpt))
    {
        <p class="text-muted">@Html.Raw(HttpUtility.HtmlDecode(Model.Excerpt))</p>
    }

    <div class="analysis-text">
        @if (!string.IsNullOrEmpty(Model.AnalysisText))
        {
            @Html.Raw(HttpUtility.HtmlDecode(Model.AnalysisText)
                     .Replace("\r\n", "\n")
                     .Replace("\n", "<br/>"))
        }
        else
        {
            <p class="text-muted">Không có nội dung phân tích.</p>
        }
    </div>

    @if (Model.KeyPoints != null && Model.KeyPoints.Count > 0)
    {
        <div class="mt-3">
            <strong>Những điểm chính:</strong>
            <ul>
                @foreach (var kp in Model.KeyPoints)
                {
                    <li>@Html.Raw(HttpUtility.HtmlDecode(kp))</li>
                }
            </ul>
        </div>
    }

    <div class="mt-3 d-flex">
        <button type="button" class="btn btn-outline-secondary copy-analysis-btn"
                data-text="@HttpUtility.HtmlEncode(Model.SuggestedCitation ?? Model.AnalysisText ?? "")">
            Chép trích dẫn
        </button>
    </div>
</div>