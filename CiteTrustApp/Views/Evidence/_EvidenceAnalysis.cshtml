@model CiteTrustApp.Models.EvidenceAnalysisViewModel
<div class="p-3">
    <h5>@Html.Encode(Model.Title)</h5>
    <p class="text-muted small">@Html.Encode(Model.Excerpt.Length > 200 ? Model.Excerpt.Substring(0, 200) + "..." : Model.Excerpt)</p>

    <hr />
    <h6>Phân tích</h6>
    <pre style="white-space:pre-wrap; background:#f8f9fa; padding:12px; border-radius:6px;">@Html.Encode(Model.AnalysisText)</pre>

    @if (Model.KeyPoints != null && Model.KeyPoints.Any())
    {
        <h6 class="mt-3">Những điểm chính</h6>
        <ul>
            @foreach (var p in Model.KeyPoints)
            {
                <li>@Html.Encode(p)</li>
            }
        </ul>
    }

    <h6 class="mt-3">Trích dẫn gợi ý</h6>
    <div class="d-flex align-items-center">
        <code class="mr-3">@Html.Encode(Model.SuggestedCitation)</code>
        <button class="btn btn-sm btn-outline-secondary copy-analysis-btn" data-text="@Html.AttributeEncode(Model.SuggestedCitation)">Chép trích dẫn</button>
    </div>
</div>